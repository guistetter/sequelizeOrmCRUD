<%- include("../partials/header.ejs") %>
<div class="container">
<h1>Nova Pessoa</h1>
<p><a href="/pessoas">Voltar para a lista de pessoas</a></p>

<form method="post">

  <div class="form-group">
    <label for="nome" >Name</label>
    <input class="form-control"
    type="text" id="nome" name="nome" 
    placeholder="Escreva seu nome">
  </div>

  <div class="form-group">
    <label for="nascimento" >Informe data Nascimento</label>
    <input class="form-control"
    type="text" id="nascimento" name="nascimento" 
    placeholder="Escreva seu nome">
  </div>

  <div class="form-group">
    <label for="cargo" >Digite seu cargo</label>
    <input class="form-control"
    type="text" id="cargo" name="cargo" 
    placeholder="Escreva seu nome">
  </div>
  <button type="submit" class="btn btn-default">Salvar</button>

</form>
</div>
<%- include("../partials/footer.ejs") %>